#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM_FILA 5   // tamanho mÃ¡ximo da fila
#define TAM_PILHA 3  // tamanho mÃ¡ximo da pilha

// ---------------------------------
// Estrutura da PeÃ§a
// ---------------------------------
typedef struct {
    char nome; // tipo da peÃ§a: 'I', 'O', 'T', 'L'
    int id;    // identificador Ãºnico
} Peca;

// ---------------------------------
// Estruturas de dados
// ---------------------------------
typedef struct {
    Peca elementos[TAM_FILA];
    int frente;
    int tras;
    int tamanho;
} Fila;

typedef struct {
    Peca elementos[TAM_PILHA];
    int topo;
} Pilha;

// ---------------------------------
// FunÃ§Ãµes de Fila
// ---------------------------------
void inicializarFila(Fila *f) {
    f->frente = 0;
    f->tras = -1;
    f->tamanho = 0;
}

int filaCheia(Fila *f) { return f->tamanho == TAM_FILA; }
int filaVazia(Fila *f) { return f->tamanho == 0; }

void enfileirar(Fila *f, Peca p) {
    if (filaCheia(f)) return;
    f->tras = (f->tras + 1) % TAM_FILA;
    f->elementos[f->tras] = p;
    f->tamanho++;
}

Peca desenfileirar(Fila *f) {
    Peca p = {'-', -1};
    if (filaVazia(f)) return p;
    p = f->elementos[f->frente];
    f->frente = (f->frente + 1) % TAM_FILA;
    f->tamanho--;
    return p;
}

Peca *acessarElementoFila(Fila *f, int pos) {
    if (pos < 0 || pos >= f->tamanho) return NULL;
    int idx = (f->frente + pos) % TAM_FILA;
    return &f->elementos[idx];
}

void exibirFila(Fila *f) {
    printf("Fila de peÃ§as\t");
    if (filaVazia(f)) {
        printf("(vazia)\n");
        return;
    }
    int i, idx = f->frente;
    for (i = 0; i < f->tamanho; i++) {
        Peca p = f->elementos[idx];
        printf("[%c %d] ", p.nome, p.id);
        idx = (idx + 1) % TAM_FILA;
    }
    printf("\n");
}

// ---------------------------------
// FunÃ§Ãµes de Pilha
// ---------------------------------
void inicializarPilha(Pilha *p) { p->topo = -1; }

int pilhaCheia(Pilha *p) { return p->topo == TAM_PILHA - 1; }
int pilhaVazia(Pilha *p) { return p->topo == -1; }

void empilhar(Pilha *p, Peca nova) {
    if (pilhaCheia(p)) return;
    p->topo++;
    p->elementos[p->topo] = nova;
}

Peca desempilhar(Pilha *p) {
    Peca removida = {'-', -1};
    if (pilhaVazia(p)) return removida;
    removida = p->elementos[p->topo];
    p->topo--;
    return removida;
}

Peca *acessarElementoPilha(Pilha *p, int pos) {
    if (pos < 0 || pos > p->topo) return NULL;
    return &p->elementos[p->topo - pos]; // 0 Ã© topo
}

void exibirPilha(Pilha *p) {
    printf("Pilha de reserva\t(Topo -> base): ");
    if (pilhaVazia(p)) {
        printf("(vazia)\n");
        return;
    }
    for (int i = p->topo; i >= 0; i--) {
        printf("[%c %d] ", p->elementos[i].nome, p->elementos[i].id);
    }
    printf("\n");
}

// ---------------------------------
// FunÃ§Ãµes auxiliares
// ---------------------------------
Peca gerarPeca(int id) {
    char tipos[] = {'I', 'O', 'T', 'L'};
    Peca nova;
    nova.nome = tipos[rand() % 4];
    nova.id = id;
    return nova;
}

void exibirEstado(Fila *f, Pilha *p) {
    printf("\n-------------------------------------------\n");
    exibirFila(f);
    exibirPilha(p);
    printf("-------------------------------------------\n");
}

// ---------------------------------
// FunÃ§Ãµes novas (versÃ£o avanÃ§ada)
// ---------------------------------

// Troca a peÃ§a da frente da fila com o topo da pilha
void trocarFrenteComTopo(Fila *fila, Pilha *pilha) {
    if (filaVazia(fila) || pilhaVazia(pilha)) {
        printf("\nâš ï¸  NÃ£o Ã© possÃ­vel trocar: fila ou pilha vazia.\n");
        return;
    }
    int idxFrente = fila->frente;
    Peca temp = fila->elementos[idxFrente];
    fila->elementos[idxFrente] = pilha->elementos[pilha->topo];
    pilha->elementos[pilha->topo] = temp;

    printf("\nðŸ”„ Troca realizada entre a frente da fila e o topo da pilha.\n");
}

// Troca as trÃªs primeiras peÃ§as da fila com as trÃªs da pilha
void trocaMultipla(Fila *fila, Pilha *pilha) {
    if (fila->tamanho < 3 || pilha->topo < 2) {
        printf("\nâš ï¸  NÃ£o Ã© possÃ­vel realizar troca mÃºltipla (precisa de pelo menos 3 peÃ§as em cada).\n");
        return;
    }

    for (int i = 0; i < 3; i++) {
        Peca *pf = acessarElementoFila(fila, i);
        Peca *pp = acessarElementoPilha(pilha, i);
        if (pf && pp) {
            Peca temp = *pf;
            *pf = *pp;
            *pp = temp;
        }
    }

    printf("\nðŸ” AÃ§Ã£o: troca realizada entre as 3 primeiras da fila e as 3 da pilha.\n");
}

// ---------------------------------
// FunÃ§Ã£o principal (main)
// ---------------------------------
int main() {
    Fila fila;
    Pilha pilha;
    inicializarFila(&fila);
    inicializarPilha(&pilha);
    srand(time(NULL));

    int idAtual = 0;

    // Inicializa a fila com 5 peÃ§as
    for (int i = 0; i < TAM_FILA; i++) {
        enfileirar(&fila, gerarPeca(idAtual++));
    }

    int opcao;
    do {
        exibirEstado(&fila, &pilha);
        printf("\nOpÃ§Ãµes disponÃ­veis:\n");
        printf("1 - Jogar peÃ§a da frente da fila\n");
        printf("2 - Enviar peÃ§a da fila para a pilha de reserva\n");
        printf("3 - Usar peÃ§a da pilha de reserva\n");
        printf("4 - Trocar peÃ§a da frente da fila com o topo da pilha\n");
        printf("5 - Trocar os 3 primeiros da fila com as 3 peÃ§as da pilha\n");
        printf("0 - Sair\n");
        printf("OpÃ§Ã£o escolhida: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1: {
                Peca jogada = desenfileirar(&fila);
                if (jogada.id != -1)
                    printf("\nðŸŽ® PeÃ§a jogada: [%c %d]\n", jogada.nome, jogada.id);
                enfileirar(&fila, gerarPeca(idAtual++));
                break;
            }
            case 2: {
                if (pilhaCheia(&pilha)) {
                    printf("\nâš ï¸  Pilha cheia! NÃ£o Ã© possÃ­vel reservar.\n");
                    break;
                }
                Peca reservada = desenfileirar(&fila);
                if (reservada.id != -1) {
                    empilhar(&pilha, reservada);
                    printf("\nðŸ“¦ PeÃ§a reservada: [%c %d]\n", reservada.nome, reservada.id);
                }
                enfileirar(&fila, gerarPeca(idAtual++));
                break;
            }
            case 3: {
                Peca usada = desempilhar(&pilha);
                if (usada.id != -1)
                    printf("\nðŸ§© PeÃ§a usada da reserva: [%c %d]\n", usada.nome, usada.id);
                enfileirar(&fila, gerarPeca(idAtual++));
                break;
            }
            case 4:
                trocarFrenteComTopo(&fila, &pilha);
                break;
            case 5:
                trocaMultipla(&fila, &pilha);
                break;
            case 0:
                printf("\nðŸ‘‹ Encerrando o jogo. AtÃ© mais!\n");
                break;
            default:
                printf("\nâš ï¸  OpÃ§Ã£o invÃ¡lida! Tente novamente.\n");
        }

    } while (opcao != 0);

    return 0;
}


